# Configurações de ambiente para o Sistema de Detecção de Fraudes TecBan

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fraud_detection

# Blockchain Configuration - Para modo real
# Obtenha sua chave gratuita em: https://infura.io/
INFURA_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Etherscan API - Para informações detalhadas de endereços
# Obtenha sua chave gratuita em: https://etherscan.io/apis
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Alternativa: Alchemy (comentar INFURA_URL se usar Alchemy)
# INFURA_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Cache Configuration
REDIS_URL=redis://localhost:6379/0

# Alert Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_USER=alerts@tecban.com
SMTP_PASSWORD=your_email_password
WEBHOOK_URL=https://your-webhook-endpoint.com/fraud-alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Application Configuration
DEBUG=False
LOG_LEVEL=INFO
API_RATE_LIMIT=1000

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
