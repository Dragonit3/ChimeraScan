# Configurações de ambiente para o Sistema de Detecção de Fraudes TecBan

# Database Configuration
DATABASE_URL=sqlite:///fraud_detection.db

# Blacklist Database Configuration
DATABASE_BLACKLIST_URL=sqlite:///blacklist.db

# Blockchain Configuration - Para modo real
# Obtenha sua chave gratuita em: https://infura.io/
INFURA_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Etherscan API - Para informações detalhadas de endereços
# Obtenha sua chave gratuita em: https://etherscan.io/apis
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR

# Cache Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
DEBUG=False
LOG_LEVEL=WARNING
API_RATE_LIMIT=1000

# Timezone Configuration
# UTC offset for date/time display (e.g., -3 for Brazil time UTC-3)
UTC_OFFSET=-3

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
